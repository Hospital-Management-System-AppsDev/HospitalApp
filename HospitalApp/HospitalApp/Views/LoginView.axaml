             x:DataType="vm:LoginViewModel">

    <Grid RowDefinitions="Auto,Auto,Auto">
        <TextBox Grid.Row="0" Watermark="Username" Text="{Binding Username}"/>
        <TextBox Grid.Row="1" PasswordChar="â—" Watermark="Password" Text="{Binding Password}" />

