<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:HospitalApp.ViewModels"
        x:Class="HospitalApp.Views.EditAppointmentWindow"
        x:DataType="vm:EditAppointmentWindowViewModel">

    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Patient Name:" />
        <TextBox Text="{Binding Appointment.PatientName}" IsReadOnly="True"/>

        <TextBlock Text="Appointment Type:" />
        <ComboBox ItemsSource="{Binding AppointmentTypes}" SelectedItem="{Binding Appointment.AppointmentType}" />

        <TextBlock Text="Doctor:" />
        <ComboBox ItemsSource="{Binding Doctors}" SelectedItem="{Binding Appointment.AssignedDoctor}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBlock Text="Date:" />
        <CalendarDatePicker SelectedDate="{Binding Appointment.AppointmentDateForPicker, Mode=TwoWay}" />
        
        <TextBlock Text="Time:" />
          <ComboBox Width="150"
                    SelectedItem="{Binding Appointment.AppointmentTime, Mode=TwoWay}"
                    ItemsSource="{Binding AvailableTimeSlots}" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Name="SaveButton" Content="Save" Width="80" />
            <Button Name="CancelButton" Content="Cancel" Width="80" />
        </StackPanel>
    </StackPanel>
</Window>
