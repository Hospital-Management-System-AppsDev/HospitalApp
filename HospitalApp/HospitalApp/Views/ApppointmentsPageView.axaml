<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="HospitalApp.Views.AppointmentsPageView">
    <Grid Background="White">
        <!-- Main Content without Sidebar -->
        <StackPanel Spacing="20" Margin="40">
            
            <!-- Header Section -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Appointments" FontSize="40" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment=" "/>

                <StackPanel Orientation="Horizontal" Grid.Column="1" Spacing="10">
                    <Border Background="#E5E7EB" Padding="10" CornerRadius="5">
                        <Button Content="Search..." Foreground="Gray"/>
                    </Border>
                    <Button Content="New Appointment" Background="#D1D5DB" Width="180" Height="40" 
                            HorizontalAlignment="Center" VerticalAlignment="Center" 
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Table Container -->
            <Border Background="#D1E7F2" CornerRadius="10" Padding="20" Margin="0,10,0,10"
                    HorizontalAlignment="Center" Width="1200">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Table Header -->
                    <Grid Background="#4682B4" Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Patient ID" Foreground="White" FontWeight="Bold" Grid.Column="0" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="Patient Name" Foreground="White" FontWeight="Bold" Grid.Column="1" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="Transaction Type" Foreground="White" FontWeight="Bold" Grid.Column="2" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="Doctor" Foreground="White" FontWeight="Bold" Grid.Column="3" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="Status" Foreground="White" FontWeight="Bold" Grid.Column="4" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    
                    <!-- Table Content -->
                    <StackPanel Grid.Row="1" Spacing="5">
                        <!-- Patient Rows -->
                        <Grid Height="50" Background="#BFD8EE">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="00000000" Grid.Column="0" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="Juan Dela Cruz" Grid.Column="1" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="Consultation" Grid.Column="2" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="Dr. Adamusa Pingay" Grid.Column="3" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="4" Width="180" Height="35" 
                                      HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ComboBoxItem Content="Pending"/>
                                <ComboBoxItem Content="Confirmed"/>
                                <ComboBoxItem Content="Cancelled"/>
                                <ComboBoxItem Content="Completed"/>
                            </ComboBox>
                        </Grid>

                        <Grid Height="50" Background="#E3F2FD">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="00000001" Grid.Column="0" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="Juan Dela Cruz" Grid.Column="1" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="X-Ray" Grid.Column="2" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="Dr. JC Atillo" Grid.Column="3" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="4" Width="180" Height="35" 
                                      HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ComboBoxItem Content="Pending"/>
                                <ComboBoxItem Content="Confirmed"/>
                                <ComboBoxItem Content="Cancelled"/>
                                <ComboBoxItem Content="Completed"/>
                            </ComboBox>
                        </Grid>

                        <Grid Height="50" Background="#BFD8EE">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="00000002" Grid.Column="0" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="Juan Dela Cruz" Grid.Column="1" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="Blood Test" Grid.Column="2" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="Dr. Moncayo" Grid.Column="3" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="4" Width="180" Height="35" 
                                      HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ComboBoxItem Content="Pending"/>
                                <ComboBoxItem Content="Confirmed"/>
                                <ComboBoxItem Content="Cancelled"/>
                                <ComboBoxItem Content="Completed"/>
                            </ComboBox>
                        </Grid>

                        <Grid Height="50" Background="#E3F2FD">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="00000003" Grid.Column="0" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="JUan Dela Cruz" Grid.Column="1" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="MRI Scan" Grid.Column="2" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="Dr. Pondar" Grid.Column="3" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="4" Width="180" Height="35" 
                                      HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ComboBoxItem Content="Pending"/>
                                <ComboBoxItem Content="Confirmed"/>
                                <ComboBoxItem Content="Cancelled"/>
                                <ComboBoxItem Content="Completed"/>
                            </ComboBox>
                        </Grid>

                        <Grid Height="50" Background="#E3F2FD">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="00000004" Grid.Column="0" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="Juan Dela Cruz" Grid.Column="1" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="Surgery" Grid.Column="2" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="Dr. Pondar" Grid.Column="3" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="4" Width="180" Height="35" 
                                      HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ComboBoxItem Content="Pending"/>
                                <ComboBoxItem Content="Confirmed"/>
                                <ComboBoxItem Content="Cancelled"/>
                                <ComboBoxItem Content="Completed"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
