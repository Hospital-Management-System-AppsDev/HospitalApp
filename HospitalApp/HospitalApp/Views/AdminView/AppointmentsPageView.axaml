<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:HospitalApp.ViewModels;assembly=HospitalApp"
             mc:Ignorable="d"
             x:Class="HospitalApp.Views.AppointmentsPageView"
             x:DataType="vm:AppointmentsPageViewModel">
    <Grid Background="White">
        <StackPanel Spacing="20" Margin="40">
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Title -->
                <TextBlock Text="Appointments" FontSize="40" FontWeight="Bold" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <Border Background="White" CornerRadius="10" BorderBrush="#D1D5DB" BorderThickness="1" Padding="5">
                        <TextBox Width="200"
                                 Watermark="Search..."
                                 FontSize="14"
                                 Background="Transparent"
                                 BorderThickness="0"/>
                    </Border>
                    <Button Content="New Appointment"
                            Background="#3E8DC0"
                            Foreground="White"
                            Width="180"
                            Height="40"
                            FontWeight="SemiBold"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            CornerRadius="10"
                            Padding="0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Table Container -->
            <Border Background="#D1E7F2" CornerRadius="10" Padding="20" Margin="0,10,0,10"
                    HorizontalAlignment="Center" Width="1200">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Table Header -->
                    <Grid Background="#4682B4" Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Patient ID" Foreground="White" FontWeight="Bold" Grid.Column="0" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="Patient Name" Foreground="White" FontWeight="Bold" Grid.Column="1" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="Transaction Type" Foreground="White" FontWeight="Bold" Grid.Column="2" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="Doctor" Foreground="White" FontWeight="Bold" Grid.Column="3" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="Status" Foreground="White" FontWeight="Bold" Grid.Column="4" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Table Rows -->
                    <ScrollViewer Grid.Row="1">
                        <ItemsControl ItemsSource="{Binding Appointments}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="vm:Appointment">
                                    <Grid Height="50" Background="#BFD8EE" Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="250"/>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="250"/>
                                            <ColumnDefinition Width="200"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding PatientId}" Grid.Column="0" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding PatientName}" Grid.Column="1" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding TransactionType}" Grid.Column="2" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Doctor}" Grid.Column="3" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <ComboBox SelectedItem="{Binding Status}" Grid.Column="4" Width="180" Height="35" 
                                                  HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <ComboBoxItem Content="Pending"/>
                                            <ComboBoxItem Content="Confirmed"/>
                                            <ComboBoxItem Content="Cancelled"/>
                                            <ComboBoxItem Content="Completed"/>
                                        </ComboBox>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
