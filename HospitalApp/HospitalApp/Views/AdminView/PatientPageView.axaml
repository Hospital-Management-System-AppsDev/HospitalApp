<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:vm="clr-namespace:HospitalApp.ViewModels"
             x:Class="HospitalApp.Views.PatientPageView"
             x:DataType="vm:PatientPageViewModel"
             Background="#E8F2F9"
             d:DesignWidth="800" d:DesignHeight="450">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid MinWidth="1024" MinHeight="600" RowDefinitions="Auto,*" Margin="30">
            <!--Header-->
            <Grid Margin="10" ColumnDefinitions="*,Auto" Grid.Row="0">
                <TextBlock Text="Patient Dashboard"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#3e8dc0"
                           Grid.Column="0"
                           VerticalAlignment="Center" />
                
                <!-- Add New Patient Button -->
                <Button Content="Add New Patient"
                        Width="140" Height="40"
                        Background="#3e8dc0" Foreground="White"
                        Grid.Column="1"/>
            </Grid>

            <!--Main Content-->
            <Grid Grid.Row="1" ColumnDefinitions="2.5*,3.5*" Margin="0,0,0,30">
                <!--Patient List-->
                <Border Background="White" BorderBrush="#DCE4EC" BorderThickness="1" CornerRadius="12" Padding="20" Margin="0,0,20,0">
                    <StackPanel Spacing="15">
                        <TextBlock Text="Patient List" FontSize="20" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" />

                        <Border Background="#EFF3F7" CornerRadius="12" Padding="8" BorderBrush="#DCE4EC" BorderThickness="1">
                            <DockPanel VerticalAlignment="Center">
                                <TextBox Watermark="Search patient..."
                                         Text="{Binding SearchText, Mode=TwoWay}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"
                                         Margin="5,0"/>
                            </DockPanel>
                        </Border>

                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300">
                            <ListBox ItemsSource="{Binding FilteredPatients}" SelectedItem="{Binding SelectedPatient, Mode=TwoWay}" BorderThickness="0" Background="Transparent" Margin="0" Padding="0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="0" Padding="10" Margin="0,2">
                                            <StackPanel Orientation="Horizontal" Spacing="5">
                                                <Ellipse Width="10" Height="10" Fill="Green" VerticalAlignment="Center"/>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="13" Foreground="#1F2937"/>
                                                    <TextBlock Text="{Binding Address}" FontSize="11" Foreground="#6B7280"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!--Patient Details-->
                <Border Grid.Column="1" Background="White" BorderBrush="#DCE4EC" BorderThickness="1" CornerRadius="12" Padding="20">
                    <Grid RowDefinitions="Auto,*,Auto">
                        <!--Personal Info-->
                        <StackPanel Grid.Row="0" Margin="0,0,0,20" DataContext="{Binding SelectedPatient}">
                            <TextBlock Text="Personal Info" FontSize="18" FontWeight="SemiBold" Foreground="Black" Margin="0,0,0,10" />
                            <Border Background="#F8FAFC" BorderBrush="#DCE4EC" BorderThickness="1" CornerRadius="8" Padding="12">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="20" Margin="0,0,0,10">
                                        <Border Width="80" Height="80" CornerRadius="40" ClipToBounds="True">
                                            <Image Source="avares://HospitalApp/Assets/patient-default.png" Stretch="UniformToFill" />
                                        </Border>
                                        <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" />
                                    </StackPanel>
                                    <UniformGrid Columns="2">
                                        <TextBlock Text="Sex:" FontSize="14" /><TextBlock Text="{Binding Sex}" FontSize="14" />
                                        <TextBlock Text="Age:" FontSize="14" /><TextBlock Text="{Binding Age}" FontSize="14" />
                                        <TextBlock Text="Birthday:" FontSize="14" /><TextBlock Text="{Binding Bday}" FontSize="14" />
                                        <TextBlock Text="Blood Type:" FontSize="14" /><TextBlock Text="{Binding BloodType}" FontSize="14" />
                                        <TextBlock Text="Address:" FontSize="14" /><TextBlock Text="{Binding Address}" FontSize="14" />
                                        <TextBlock Text="Contact:" FontSize="14" /><TextBlock Text="{Binding ContactNumber}" FontSize="14" />
                                        <TextBlock Text="Email:" FontSize="14" /><TextBlock Text="{Binding Email}" FontSize="14" />
                                    </UniformGrid>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!--Medical Info Tabs-->
                        <Grid Grid.Row="1" RowDefinitions="Auto,*" Margin="0,0,0,20" DataContext="{Binding SelectedPatient}">
                            <TextBlock Text="Medical Info" FontSize="18" FontWeight="SemiBold" Foreground="Black" Margin="0,0,0,10" />
                            <Border Grid.Row="1" Background="#F8FAFC" BorderBrush="#DCE4EC" BorderThickness="1" CornerRadius="8" Padding="10">
                                <TabControl>
                                    <TabItem Header="Lifestyle">
                                        <ScrollViewer>
                                            <StackPanel Spacing="8">
                                                <TextBlock Text="Diet information not available" FontSize="16" Foreground="#2c3e50" />
                                                <TextBlock Text="Exercise information not available" FontSize="16" Foreground="#2c3e50" />
                                                <TextBlock Text="Sleep information not available" FontSize="16" Foreground="#2c3e50" />
                                                <TextBlock Text="Smoking status not available" FontSize="16" Foreground="#2c3e50" />
                                                <TextBlock Text="Alcohol consumption not available" FontSize="16" Foreground="#2c3e50" />
                                            </StackPanel>
                                        </ScrollViewer>
                                    </TabItem>

                                    <TabItem Header="Maintenance Medication">
                                        <ScrollViewer>
                                            <TextBlock Text="No medication information available" FontSize="16" Foreground="#2c3e50"/>
                                        </ScrollViewer>
                                    </TabItem>

                                    <TabItem Header="Allergies">
                                        <ScrollViewer>
                                            <TextBlock Text="No allergy information available" FontSize="16" Foreground="#2c3e50"/>
                                        </ScrollViewer>
                                    </TabItem>
                                </TabControl>
                            </Border>
                        </Grid>

                        <!--Action Buttons-->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                            <Button Content="Save Changes"
                                    Width="140" Height="40"
                                    Background="#28A745" Foreground="White"
                                    Command="{Binding SaveChangesCommand}" />

                            <Button Content="Delete Patient"
                                    Width="140" Height="40"
                                    Background="#860111" Foreground="White"
                                    Command="{Binding DeletePatientCommand}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>